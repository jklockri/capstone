

<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="page-title-box">

            <h4 class="page-title">Welcome <%=current_user.name.capitalize%></h4>

            <ol class="breadcrumb p-0 m-0">
              <li>
                <a href="#">Codefox</a>
              </li>
              <!--<li>-->
              <!--<a href="#">Dashboard</a>-->
              <!--</li>-->
              <li class="active">
                Dashboard
              </li>
            </ol>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
      <!-- end row -->
      <div class ="row">
      <div class="col-md-4">
      <a class="btn btn-info btn-lg btn-block" href="/bets/new">Place a new bet</a>
        </div>

        <div class="col-md-4">
        <a class="btn btn-info btn-lg btn-block" href="/points">Buy points</a>
        </div>

         <div class="col-md-4">
        <a class="btn btn-info btn-lg btn-block" href="/graphs">Check out some graphs</a>
        </div>

      </div>
      <br>

      <div class="row">

        <div class="col-lg-6 col-md-6">
          <div class="card-box widget-box-two widget-two-danger">
            <i class="mdi mdi-chart-line widget-two-icon"></i>
            <div class="wigdet-two-content">
              <p class="m-0 text-uppercase text-white font-600 font-secondary text-overflow" title="Statistics">Total Points</p>
              <h2 class="text-white">$<span data-plugin="counterup"><%=@total_points%></span> <small><i class="mdi sm-arrow-up text-white"></i></small></h2>

            </div>
          </div>
        </div><!-- end col -->

        <div class="col-lg-6 col-md-6">
          <div class="card-box widget-box-two widget-two-success">
            <i class="mdi mdi-access-point-network widget-two-icon"></i>
            <div class="wigdet-two-content">
              <p class="m-0 text-white text-uppercase font-600 font-secondary text-overflow" title="User Today">Total Bets</p>
              <h2 class="text-white"><span data-plugin="counterup"><%=@bets.length%></span> <small><i class="mdi mdi-arrow-up text-white"></i></small></h2>
            </div>
          </div>
        </div><!-- end col -->
        </div>
        <div class="row">

        <div class="col-lg-6 col-md-6">
          <div class="card-box widget-box-two widget-two-success">
            <i class="mdi mdi-timetable widget-two-icon"></i>
            <div class="wigdet-two-content">
              <p class="m-0 text-uppercase text-white font-600 font-secondary text-overflow" title="Request Per Minute">Player Rating</p>
              <h2 class="text-white"><span data-plugin="counterup"><%=@total_player_rating%></span> <small><i class="mdi mdi-arrow-up text-white"></i></small></h2>
            </div>
          </div>
        </div><!-- end col -->

        <div class="col-lg-6 col-md-6">
          <div class="card-box widget-box-two widget-two-success">
            <i class="mdi mdi-cloud-download widget-two-icon"></i>
            <div class="wigdet-two-content">
              <p class="m-0 text-white text-uppercase font-600 font-secondary text-overflow" title="New Downloads">Judge Rating</p>
              <h2 class="text-white"><span data-plugin="counterup"><%=@total_judge_rating%></span> <small><i class="mdi mdi-arrow-up text-white"></i></small></h2>
            </div>
          </div>
        </div><!-- end col -->

      </div>
      <!-- end row -->


  <!-- end row -->
  <div>
    <h3>Recent Bets</h3>
  </div>

  <div id="app" class="col-lg-12" >
    <table class="table table-striped add-edit-table table-bordered" id="datatable-editable">
      <thead>
        <tr>
          <th>Date</th>
          <th>First user</th>
          <th>Second User</th>
          <th>Judge</th>
          <th>Winner</th>
          <th>Judge this</th>
          <th>Rate Judge</th>
          <th>Rate Other Player</th>
        </tr>
      </thead>
      <tbody v-for="bet in modifiedBets">
        <tr class="gradeX">

          <td>{{bet.created_at}}</td>
          <td>{{bet.first_user.name}}</td>
          <td>{{bet.second_user.name}}</td>
          <td>{{bet.master_judge.name}}</td>
          <td><span class="label label-info" v-for="win in bet.wins" v-if="win.win">
            {{win.name}}

          </span></td>
          <td class="actions">
            <a v-bind:href="'/judge/' + bet.id" class="on-default edit-row" v-if="currentUser.id == bet.master_judge.id && !bet.wins[0]" ><i class="fa fa-pencil"></i></a>
          </td>
          <td><a  class = "btn btn-danger btn-sm" v-bind:href="'/rate/' + bet.id + '?type=judge'" v-if="currentUser.id !== bet.master_judge.id">Rate Judge</a></td>
          <td><a class ="btn btn-warning btn-sm" v-bind:href="'/rate/' + bet.id + '?type=player'">Rate Player</a></td>
        </tr>
      </tbody>
    </table>
  </div>

</div> <!-- container -->

</div> <!-- content -->

</div>





