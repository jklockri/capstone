<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="page-title-box">
            <h4 class="page-title">New Bet</h4>
            <ol class="breadcrumb p-0 m-0">
              <li>
                <a href="#">Let's Bet</a>
              </li>
              <li class="active">
                New Bet 
              </li>
            </ol>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
      <!-- end row -->

      <div class="row">
        <div class="col-sm-12">
          <%= form_tag "/bets", method: :post do%> 
          <div> <h4>Who are you betting?</h4>
            <!-- <input type="text" name="second_user"> -->
            <select name="second_user">
              <% User.all.each do |user| %>
              <%if current_user.name !=user.name%> 
              <option value="<%= user.name %>"> <%= user.name.capitalize%></option>
              <% end %>
              <%end%>
            </select>
          </div>
          <div>
            <h4>How many points would you like to risk?</h4>
            <input type="text" name="amount">
          </div>
          <div> <h4>Who is your judge?</h4>
            <select name="master_judge">
              <% User.all.each do |user| %>
              <% if current_user.name != user.name%>
              <option value="<%= user.name %>"><%= user.name.capitalize%></option>
              <% end %>
              <%end%>
            </select>
          </div>
          <div> <h4>What are the terms of your bet?</h4>
            <input type="text" name="terms">
          </div>
          <br>
          <input class="btn btn-primary" type="submit" name="submit">

          <%end%>
        </div><!-- end col -->
      </div>
      <!-- end row -->


    </div> <!-- container -->

  </div> <!-- content -->


